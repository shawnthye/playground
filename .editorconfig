# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
tab_width = 4

# kotlin specific EditorConfig properties https://github.com/pinterest/ktlint#custom-ktlint-specific-editorconfig-properties
[*.{kt,kts}]
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

[*.{xml,yml}]
indent_size = 2
tab_width = 2

[*.md]
trim_trailing_whitespace = false
