<?xml version="1.0" encoding="utf-8"?>

<resources>
  <!--Top level DayNight theme to be used in AndroidManifest.xml-->
  <style name="DeviantArt" parent="Base.DeviantArt" />

  <!--<style name="DeviantArt.Launch">-->
  <!--  <item name="android:windowBackground">@drawable/launch_preview_window</item>-->
  <!--  <item name="android:windowContentOverlay">@null</item>-->
  <!--  <item name="android:colorBackgroundCacheHint">@null</item>-->
  <!--</style>-->

  <!--Base custom theme which will be shared between both light and dark theme variants-->
  <style name="Base.DeviantArt" parent="DeviantArt.Base.Theme.NoApi">
    <!--Material color attributes (light theme) -->
    <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
    <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
    <!--selection controls.-->
    <item name="colorPrimary">@color/deviant_art_brand_night</item>
    <item name="colorPrimaryVariant">@color/deviant_art_brand_night</item>
    <item name="colorSecondary">@color/deviant_art_brand</item>
    <item name="colorSecondaryVariant">@color/deviant_art_brand_variant</item>

    <!--colorBackground appears behind scrollable content and is used for the default window-->
    <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
    <!--and menus. colorError is used to indicate an error state for components such as-->
    <!--text fields.-->
    <item name="android:colorBackground">@color/deviant_art_white_50</item>
    <item name="colorSurface">@color/deviant_art_white_50</item>
    <item name="colorError">@color/deviant_art_red_600</item>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <item name="colorOnPrimary">@color/deviant_art_white_50</item>
    <item name="colorOnSecondary">@color/deviant_art_white_50</item>
    <item name="colorOnBackground">@color/deviant_art_brand_night</item>
    <item name="colorOnSurface">@color/deviant_art_brand_night</item>
    <item name="colorOnError">@color/deviant_art_white_50</item>

    <!--Dividers-->
    <item name="dividerVertical">@color/deviant_art_list_divider_day</item>
    <item name="android:dividerVertical">?dividerVertical</item>
    <item name="android:listDivider">?dividerVertical</item>
    <!--<item name="dividerHorizontal">@drawable/abc_list_divider_mtrl_alpha</item>-->
    <!--<item name="android:dividerHorizontal">?dividerVertical</item>-->

    <!--Material type attributes-->
    <item name="textAppearanceHeadline1">@style/TextAppearance.DeviantArt.Headline1</item>
    <item name="textAppearanceHeadline2">@style/TextAppearance.DeviantArt.Headline2</item>
    <item name="textAppearanceHeadline3">@style/TextAppearance.DeviantArt.Headline3</item>
    <item name="textAppearanceHeadline4">@style/TextAppearance.DeviantArt.Headline4</item>
    <item name="textAppearanceHeadline5">@style/TextAppearance.DeviantArt.Headline5</item>
    <item name="textAppearanceHeadline6">@style/TextAppearance.DeviantArt.Headline6</item>
    <item name="textAppearanceSubtitle1">@style/TextAppearance.DeviantArt.Subtitle1</item>
    <item name="textAppearanceSubtitle2">@style/TextAppearance.DeviantArt.Subtitle2</item>
    <item name="textAppearanceBody1">@style/TextAppearance.DeviantArt.Body1</item>
    <item name="textAppearanceBody2">@style/TextAppearance.DeviantArt.Body2</item>
    <item name="textAppearanceButton">@style/TextAppearance.DeviantArt.Button</item>
    <item name="textAppearanceCaption">@style/TextAppearance.DeviantArt.Caption</item>
    <item name="textAppearanceOverline">@style/TextAppearance.DeviantArt.Overline</item>

    <!--Material shape attributes-->
    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.DeviantArt.SmallComponent
    </item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.DeviantArt.MediumComponent
    </item>
    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.DeviantArt.LargeComponent
    </item>

    <!--Component styles-->
    <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
    </item>
    <item name="bottomSheetDialogTheme">@style/ThemeOverlay.DeviantArt.BottomSheetDialog</item>
    <item name="navigationViewStyle">@style/Widget.DeviantArt.NavigationView</item>
    <item name="bottomNavigationStyle">@style/Widget.DeviantArt.BottomNavigationView</item>
    <item name="toolbarStyle">@style/Widget.DeviantArt.Toolbar</item>
    <item name="appBarLayoutStyle">@style/Widget.DeviantArt.AppBar</item>

    <!--Button styles-->
    <item name="materialButtonStyle">@style/Widget.DeviantArt.Button</item>
    <item name="buttonStyle">?materialButtonStyle</item>

    <item name="materialButtonTextButtonStyle">@style/Widget.DeviantArt.Button.TextButton</item>
    <item name="borderlessButtonStyle">?materialButtonTextButtonStyle</item>
    <item name="android:borderlessButtonStyle">?materialButtonTextButtonStyle</item>

    <item name="materialButtonOutlinedStyle">@style/Widget.DeviantArt.Button.OutlinedButton</item>

    <!--Additional attribute-->
    <item name="appBarSize">?attr/actionBarSize</item>
    <item name="appBarZ">@dimen/z_app_bar</item>

    <item name="bottomAppBarZ">@dimen/z_bottom_app_bar</item>

    <item name="cardZLow">@dimen/z_card_low</item>
    <item name="cardZ">@dimen/z_card</item>
    <item name="cardZHigh">@dimen/z_card_high</item>
  </style>

  <style name="DeviantArt.Base.Theme.NoApi" parent="DeviantArt.Base.Theme.Api29">
    <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
  </style>

  <style name="DeviantArt.Base.Theme.Api29" parent="DeviantArt.Base.Theme.Api27" />

  <style name="DeviantArt.Base.Theme.Api27" parent="DeviantArt.Base.Theme.Api23" />

  <style name="DeviantArt.Base.Theme.Api23" parent="DeviantArt.Base.Theme" />

  <style name="DeviantArt.Base.Theme" parent="Platform.Theme.DeviantArt" />

  <style name="Platform.Theme.DeviantArt" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    <!-- Work around to remove DrawerLayout status bar color -->
    <item name="colorPrimaryDark">@null</item>

    <item name="android:statusBarColor">@color/deviant_art_status_bar_color</item>
    <!--    <item name="android:windowLightStatusBar">true</item>-->
    <item name="android:navigationBarColor">@color/deviant_art_status_bar_color</item>
    <!--    <item name="android:windowLightNavigationBar">true</item>-->
  </style>
</resources>
