        >

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

          <TextView
            style="?textAppearanceHeadline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorSurfaceVariant"
            android:maxLines="2"
            android:paddingHorizontal="@dimen/content_horizontal_margin"
            android:paddingVertical="@dimen/content_vertical_margin"
            android:text="@{viewModel.deviationState.data.title}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/lorem[5]"
            />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/content_horizontal_margin"
            android:paddingVertical="@dimen/content_vertical_margin"
            tools:ignore="UseCompoundDrawables"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="end"
              android:orientation="vertical"
              android:paddingStart="0dp"
              android:paddingEnd="@dimen/key_line_2"
              >

              <TextView
                style="?textAppearanceSubtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{viewModel.deviationState.data.authorName}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/lorem[10]"
                />

              <TextView
                style="?textAppearanceCaption"
                date="@{viewModel.deviationState.data.published}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/date/ddmmyy"
                />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
              clipToCircle="@{true}"
              imageUrl="@{viewModel.deviationState.data.authorIconUrl}"
              placeholder="@{@color/track_placeholder}"
              android:layout_width="64dp"
              android:layout_height="64dp"
              android:clickable="true"
              android:contentDescription="@{viewModel.deviationState.data.authorName}"
              android:foreground="?selectableItemBackground"
              tools:src="@tools:sample/avatars"
              >

            </ImageView>
          </LinearLayout>

