<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".ui.track.DeviantTrack"
  >

  <data>

    <import type="feature.playground.deviant.ui.track.DeviantTrackViewModel" />

    <variable
      name="viewModel"
      type="DeviantTrackViewModel"
      />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

      <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    </com.google.android.material.appbar.AppBarLayout>

    <core.playground.ui.widget.CoreSwipeRefreshLayout
      goneUnless="@{!viewModel.deviationsState.empty}"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/appbar"
      app:onRefreshListener="@{() -> viewModel.onSwipeRefresh()}"
      app:refreshing="@{viewModel.isRefreshing}"
      >

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deviations"
        deviations="@{viewModel.deviationsState}"
        onClickListener="@{viewModel}"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="GridLayoutManager"
        app:spanCount="2"
        tools:itemCount="10"
        tools:listitem="@layout/deviation_item"
        tools:spanCount="2"
        />
    </core.playground.ui.widget.CoreSwipeRefreshLayout>

    <ProgressBar
      style="?attr/progressBarStyle"
      goneUnless="@{viewModel.isRefreshing &amp;&amp; viewModel.deviationsState.empty}"
      android:layout_width="56dp"
      android:layout_height="56dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
