<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".ui.DeviantActivity"
  >

  <data>

    <import type="kotlinx.coroutines.flow.StateFlow" />

    <import type="core.playground.domain.Result" />

    <import type="feature.playground.deviant.ui.DeviantViewModel" />

    <variable
      name="viewModel"
      type="DeviantViewModel"
      />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@{viewModel.deviant.title}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@tools:sample/full_names"
      tools:ignore="HardcodedText"
      />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
